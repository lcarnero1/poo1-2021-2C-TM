package ejercicios.clase2;

public class Ejercicio4 {
	
	static boolean esPar(int numero) {
		return (numero % 2 == 0);
	}
	

	
	public static void main(String[] args) {
	
		System.out.println(esPar(345));
		System.out.println(esPar(345));
		System.out.println(esPar(3));
		System.out.println(esPar(4));
		System.out.println(esPar(45));
		System.out.println(esPar(123234456));
		System.out.println(esPar(5));
		System.out.println(esPar(0));


	}

	// syso ctl + space
	// main "
	// ctl + shift + F formatea el c√≥digo

}
