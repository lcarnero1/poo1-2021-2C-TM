package ejercicios.clase2;

public class Ejercicio4 {

	public static void darVueltaLaFecha(int fecha) {
		
		int dia;
		int mes;
		int anio;
		
		anio = fecha / 10000;
		dia = fecha % 100;
		mes = fecha / 100 % 100;
		
		System.out.println("dia " + dia + ", mes " + mes + ", a√±o " + anio);
		
	}
	
	public static void main(String[] args) {
		
		darVueltaLaFecha(20210813);

	}

}
